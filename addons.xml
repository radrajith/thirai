<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.thirai" name="Thirai" version="1.0.7" provider-name="radrajith">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Thirai scrapes the web for Tamil TV Shows, Serials and Movies.</summary>
    <description>Links to watch Tamil TV Shows and Movies.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.radrajith.addons" name="radrajith's XBMC Addons" version="1.0.0" provider-name="radrajith">
  <extension	point="xbmc.addon.repository" name="radrajith's XBMC Addon Repository">
		<info compressed="false">https://github.com/radrajith/thirai/raw/master/addons.xml</info>
		<checksum>https://github.com/codenx/codenx-xbmc-addons/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/radrajith/thirai/raw/master/data/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Code 'n X Addons</summary>
		<description>Download and install radrajith Addons</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
